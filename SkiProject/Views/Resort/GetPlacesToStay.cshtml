@model ResortViewModel

@if (Model.Name == "Bansko")
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name of hotel</th>
                <th scope="col">City</th>
                <th scope="col">PricePerNight</th>
                <th scope="col">Capacity</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.PlacesToStay.Count; i++)
            {
                <tr>
                    <th scope="row">@Model.PlacesToStay[i].Name</th>
                    <td>@Model.PlacesToStay[i].City.Name</td>
                    <td>@Model.PlacesToStay[i].PricePerNightForAPerson</td>
                    <td>@Model.PlacesToStay[i].Capacity</td>
                </tr>
            }
        </tbody>
    </table>
}
